<NumberButton@Button>:
    font_size: 40
    background_color: (0.955, 0.537, 0.537, 0.7)

<KeyButton@Button>:
    font_size: 40
    background_color: (0.99, 0.50, 0.50, 1)

<BoxLayout>:
    spacing: 10

<CalculatorGridLayout>:
    id: calculator
    display: input
    rows: 5
    padding: 10
    spacing: 10
    canvas:
        Color:
            rgba: (0.992, 0.875, 0.875, 1)
        RoundedRectangle: 
            radius: (20,20,20,20)
            pos: self.pos
            size: self.size

    BoxLayout:
        TextInput:
            id: input
            font_size: 40
            multiline: False
            foreground_color: app.display_color(self.text)


    BoxLayout:
        NumberButton:
            text: '7'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        NumberButton:
            text: '8'
            on_press: 
                if input.text == "Error!": input.text = ""
                input.text += self.text
        NumberButton:
            text: '9'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        KeyButton:
            text: '+'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
    BoxLayout:
        NumberButton:
            text: '4'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        NumberButton:
            text: '5'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        NumberButton:
            text: '6'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        KeyButton:
            text: '-' 
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
    BoxLayout:
        NumberButton:
            text: '1'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        NumberButton:
            text: '2'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        NumberButton:
            text: '3'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        KeyButton:
            text: '*'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
    BoxLayout:
        KeyButton:
            text: 'clear'
            on_press: input.text = ""
        NumberButton:
            text: '0'
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
        KeyButton:
            text: '='
            on_press: calculator.calculate(input.text)
        KeyButton:
            text: '/'         
            on_press:
                if input.text == "Error!": input.text = ""
                input.text += self.text
